# Discord Bot Token
BOT_TOKEN=your_bot_token_here

# Bot Application ID
CLIENT_ID=your_client_id_here

# Guild ID (for development)
GUILD_ID=your_development_guild_id_here

# Environment (development or production)
NODE_ENV=development

# Log Level (error, warn, info, verbose, debug, silly)
LOG_LEVEL=info

# Privileged Intents (set to 'true' to enable, requires approval in Discord Developer Portal)
USE_MESSAGE_CONTENT=true
USE_GUILD_MEMBERS=true

# Bot Configuration
PREFIX=!

# Sharding Configuration
SHARDING_ENABLED=true
SHARDING_TOTAL_SHARDS=auto
SHARDING_MODE=process
SERVERS_PER_SHARD=1000

# Database Configuration
DATABASE_URI=mongodb://localhost:27017/discordbot
DATABASE_CACHE_TTL=300

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

WEATHER_API_KEY=your_weather_api_key_here
WEATHER_UNITS=metric

# API Rate Limiting
API_RATE_LIMIT=60
API_MAX_CONCURRENT=10

# Bot Owner
OWNER_ID=your_discord_id_here